{
  "manifest_version": 3,
  "name": "Form Automation",
  "version": "1.0",
  "permissions": [
    "storage", 
    "tabs", 
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Start Form Automation"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
